<svg  
	viewBox="0 0 100 120" 
	xmlns="http://www.w3.org/2000/svg"
	color="gray"
	fill="silver"
	stroke="rgb(11,62,111)" 
	stroke-width="1" 
	stroke-linecap="round" 
	stroke-linejoin="round"
>

<defs>
	<g id="centre">
		<circle cx="16" cy="16" r="8"/>
		<circle cx="16" cy="16" r="1.5"/>
	</g>
	<g id="endpoint">
		<line x1="8" y1="8" x2="24" y2="24" />		
		<circle cx="8" cy="8" r="1.5"/>
		<circle cx="24" cy="24" r="1.5"/>
	</g>
	<g id="intersection">
		<line x1="8" y1="8" x2="24" y2="24" />		
		<line x1="8" y1="24" x2="24" y2="8" />		
		<circle cx="16" cy="16" r="1.5"/>
	</g>
	<g id="midpoint">
		<line x1="6" y1="16" x2="26" y2="16" />		
		<circle cx="16" cy="16" r="1.5"/>
	</g>	
	<g id="tangent">
		<line x1="6" y1="8" x2="26" y2="8" />		
		<circle cx="16" cy="16" r="8"/>
		<circle cx="16" cy="8" r="1.5"/>
	</g>	
	<g id="quadrant">
		<circle cx="16" cy="16" r="8"/>
		<circle cx="16" cy="8" r="1.5"/>
		<circle cx="24" cy="16" r="1.5"/>
		<circle cx="16" cy="24" r="1.5"/>
		<circle cx="8" cy="16" r="1.5"/>
	</g>		
	<g id="base">
		<circle cx="8" cy="24" r="1.5"/>
		<text x="10" y="22" class='tile-group-text' stroke="gray" >B</text>
	</g>	
	<g id="grid">
		<circle cx="8" cy="8" r="1.5"/>
		<circle cx="16" cy="8" r="1.5"/>
		<circle cx="24" cy="8" r="1.5"/>
		<circle cx="8" cy="16" r="1.5"/>
		<circle cx="16" cy="16" r="1.5"/>
		<circle cx="24" cy="16" r="1.5"/>
		<circle cx="8" cy="24" r="1.5"/>
		<circle cx="16" cy="24" r="1.5"/>
		<circle cx="24" cy="24" r="1.5"/>
	</g>	
	<g id="perpendicular">
		<line x1="8" y1="24" x2="24" y2="8" />	
		<line x1="16" y1="16" x2="24" y2="24" />	
		<circle cx="16" cy="16" r="1.5"/>
	</g>
</defs>

	<rect x="0" y="0" width="100" height="120" stroke-width="0"/>

	<g class="tile toggle" transform="translate(2,2)">
		<rect width="32" height="32" />
		<title>endpoint</title>
		<signal for="snapper">$tile.flip("state").poke(data, "e", "state")</signal>
		<watch  for="snapper-response">$tile.attr("state", data.e).lite("state").echo(data)</watch>
		<use xlink:href="#endpoint" stroke="currentColor" />
	</g>

	<g class="tile toggle" transform="translate(34,2)">
		<rect width="32" height="32" />
		<title>midpoint</title>
		<signal for="snapper">$tile.flip("state").poke(data, "m", "state")</signal>
		<watch  for="snapper-response">$tile.attr("state", data.m).lite("state").echo(data)</watch>
		<use xlink:href="#midpoint" stroke="currentColor" />
	</g>

	<g class="tile toggle" transform="translate(66,2)">
		<rect width="32" height="32" />
		<title>intersection</title>
		<signal for="snapper">$tile.flip("state").lite("state").poke(data, "i", "state")</signal>
		<watch  for="snapper-response">$tile.attr("state", data.i).lite("state").echo(data)</watch>
		<use xlink:href="#intersection" stroke="currentColor" />
	</g>
	
	<!-- 2ND ROW -->
	<g class="tile toggle" transform="translate(2,34)">
		<rect width="32" height="32" />
		<title>quadrant</title>
		<signal for="snapper">$tile.flip("state").lite("state").poke(data, "q", "state")</signal>
		<watch  for="snapper-response">$tile.attr("state", data.q).lite("state").echo(data)</watch>
		<use xlink:href="#quadrant" stroke="currentColor"/>
	</g>	

	<g class="tile toggle" transform="translate(34,34)">
		<rect width="32" height="32" />
		<title>centre</title>
		<signal for="snapper">$tile.flip("state").lite("state").poke(data, "c", "state")</signal>
		<watch  for="snapper-response">$tile.attr("state", data.c).lite("state").echo(data)</watch>
		<use xlink:href="#centre" stroke="currentColor"/>
	</g>

	<g class="tile toggle" transform="translate(66,34)">
		<rect width="32" height="32" />
		<title>tangent</title>
		<signal for="snapper">$tile.flip("state").lite("state").poke(data, "t", "state")</signal>
		<watch  for="snapper-response">$tile.attr("state", data.t).lite("state").echo(data)</watch>
		<use xlink:href="#tangent" stroke="currentColor"/>
	</g>

	<!-- 3RD ROW -->
	<g class="tile toggle" transform="translate(2,66)">	
		<rect width="32" height="32" />
		<title>base</title>
		<signal for="snapper">$tile.flip("state").lite("state").poke(data, "b", "state")</signal>
		<watch  for="snapper-response">$tile.attr("state", data.b).lite("state").echo(data)</watch>
		<use xlink:href="#base" stroke="currentColor"/>
	</g>
	
	<g class="tile toggle" transform="translate(34,66)">
		<rect width="32" height="32" />
		<title>grid</title>
		<signal for="snapper">$tile.flip("state").lite("state").poke(data, "g", "state")</signal>
		<watch  for="snapper-response">$tile.attr("state", data.g).lite("state").echo(data)</watch>
		<use xlink:href="#grid" stroke="currentColor"/>
	</g>

	<g class="tile toggle" transform="translate(66,66)">
		<rect width="32" height="32" />
		<title>perpendicular</title>
		<signal for="snapper">$tile.flip("state").lite("state").poke(data, "p", "state")</signal>
		<watch  for="snapper-response">$tile.attr("state", data.p).lite("state").echo(data)</watch>
		<use xlink:href="#perpendicular" stroke="currentColor"/>
	</g>

	<g class="tile toggle" transform="translate(2,96)">
		<rect width="96" height="20" />
		<text x="2" y="14" class="tile-group-text" stroke="gray" >Snaps</text>
		<title>activates|deactivates snapping</title>
		<signal for="snapper">$tile.flip("state").lite("state").poke(data, "a", "state")</signal>
		<watch  for="snapper-response">$tile.attr("state", data.a).lite("state").echo(data)</watch>
	</g>

</svg>
