<svg  
	viewBox="0 0 100 120" 
	xmlns="http://www.w3.org/2000/svg"
	color="gray"
	fill="silver"
	stroke="rgb(11,62,111)" 
	stroke-width="1" 
	stroke-linecap="round" 
	stroke-linejoin="round"
>

<defs>
	<g id="centre">
		<circle cx="16" cy="16" r="8"/>
		<circle cx="16" cy="16" r="1.5"/>
	</g>
	<g id="endpoint">
		<line x1="8" y1="8" x2="24" y2="24" />		
		<circle cx="8" cy="8" r="1.5"/>
		<circle cx="24" cy="24" r="1.5"/>
	</g>
	<g id="intersection">
		<line x1="8" y1="8" x2="24" y2="24" />		
		<line x1="8" y1="24" x2="24" y2="8" />		
		<circle cx="16" cy="16" r="1.5"/>
	</g>
	<g id="midpoint">
		<line x1="6" y1="16" x2="26" y2="16" />		
		<circle cx="16" cy="16" r="1.5"/>
	</g>	
	<g id="tangent">
		<line x1="6" y1="8" x2="26" y2="8" />		
		<circle cx="16" cy="16" r="8"/>
		<circle cx="16" cy="8" r="1.5"/>
	</g>	
	<g id="quadrant">
		<circle cx="16" cy="16" r="8"/>
		<circle cx="16" cy="8" r="1.5"/>
		<circle cx="24" cy="16" r="1.5"/>
		<circle cx="16" cy="24" r="1.5"/>
		<circle cx="8" cy="16" r="1.5"/>
	</g>		
	<g id="base">
		<circle cx="8" cy="24" r="1.5"/>
		<text x="10" y="22" class='tile-group-text' stroke="gray" >B</text>
	</g>	
	<g id="grid">
		<circle cx="8" cy="8" r="1.5"/>
		<circle cx="16" cy="8" r="1.5"/>
		<circle cx="24" cy="8" r="1.5"/>
		<circle cx="8" cy="16" r="1.5"/>
		<circle cx="16" cy="16" r="1.5"/>
		<circle cx="24" cy="16" r="1.5"/>
		<circle cx="8" cy="24" r="1.5"/>
		<circle cx="16" cy="24" r="1.5"/>
		<circle cx="24" cy="24" r="1.5"/>
	</g>	
	<g id="perpendicular">
		<line x1="8" y1="24" x2="24" y2="8" />	
		<line x1="16" y1="16" x2="24" y2="24" />	
		<circle cx="16" cy="16" r="1.5"/>
	</g>
</defs>

	<rect x="0" y="0" width="100" height="120" stroke-width="0"/>

	<g class="tile toggle">
		<rect x="2" y="2" width="32" height="32" />
		<title>endpoint</title>
		<command>snapper;e;${state^=1};exit</command>
		<success>toggle_confirmed(${result})</success>
		<use x="2" y="2" xlink:href="#endpoint" stroke="currentColor" />
	</g>

	<g class="tile toggle">
		<rect x="34" y="2" width="32" height="32" />
		<title>midpoint</title>
		<command>snapper;m;${state^=1};exit</command>
		<success>toggle_confirmed(${result})</success>
		<use x='34' y='2' xlink:href="#midpoint" stroke="currentColor" />
	</g>

	<g class="tile toggle">
		<rect x="66" y="2" width="32" height="32" />
		<title>intersection</title>
		<command>snapper;i;${state^=1};exit</command>
		<success>toggle_confirmed(${result})</success>
		<use x="66" y="2" xlink:href="#intersection" stroke="currentColor" />
	</g>
	
	<!-- 2ND ROW -->
	<g class="tile toggle">
		<rect x="2" y="34" width="32" height="32" />
		<title>quadrant</title>
		<command>snapper;q;${state^=1};exit</command>
		<success>toggle_confirmed(${result})</success>
		<use x="2" y="34" xlink:href="#quadrant" stroke="currentColor"/>
	</g>	

	<g class="tile toggle">
		<rect x="34" y="34" width="32" height="32" />
		<title>centre</title>
		<command>snapper;c;${state^=1};exit</command>
		<success>toggle_confirmed(${result})</success>
		<use x="34" y="34" xlink:href="#centre" stroke="currentColor"/>
	</g>

	<g class="tile toggle">
		<rect x="66" y="34" width="32" height="32" />
		<title>tangent</title>
		<command>snapper;t;${state^=1};exit</command>
		<success>toggle_confirmed(${result})</success>
		<use x='66' y='34' xlink:href="#tangent" stroke="currentColor"/>
	</g>

	<!-- 3RD ROW -->
	<g class="tile toggle">	
		<rect x="2" y="66" width="32" height="32" />
		<title>base</title>
		<command>snapper;b;${state^=1};exit</command>
		<success>toggle_confirmed(${result})</success>
		<use x="0" y="64" xlink:href="#base" stroke="currentColor"/>
	</g>
	
	<g class="tile toggle">
		<rect x="34" y="66" width="32" height="32" />
		<title>grid</title>
		<command>snapper;g;${state^=1};exit</command>
		<success>toggle_confirmed(${result})</success>
		<use x="34" y="66" xlink:href="#grid" stroke="currentColor"/>
	</g>

	<g class="tile toggle">
		<rect x="66" y="66" width="32" height="32" />
		<title>perpendicular</title>
		<command>snapper;p;${state^=1};exit</command>
		<success>toggle_confirmed(${result})</success>
		<use x="66" y="66" xlink:href="#perpendicular" stroke="currentColor"/>
	</g>

	<g class="tile toggle">
		<rect x="2" y="96" width="96" height="20" />
		<text x="4" y="110" class="tile-group-text" stroke="gray" >Snaps</text>
		<title>activates|deactivates snapping</title>
		<command>snapper;a;${state^=1};exit</command>
		<success>toggle_confirmed(${result})</success>
	</g>

</svg>
